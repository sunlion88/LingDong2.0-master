<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/offline_files_main_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="安卓-PC文本剪贴工具"
        android:textColor="@color/white"
        android:textSize="23dp" />

    <EditText
        android:id="@+id/btn_text_cut_paste"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="20dp"
        android:background="@drawable/offline_files_button_shape"
        android:hint="这里是文本剪贴框"
        android:textColor="@color/white" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:text="发送到PC后直接粘贴"
        android:visibility="gone"
        android:background="@drawable/offline_files_button_shape"/>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/start"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/offline_files_button_shape"
            android:layout_margin="2dp"
            android:textColor="@color/white"
            android:text="启动剪贴板服务" />

        <Button
            android:id="@+id/stop"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/offline_files_button_shape"
            android:layout_margin="2dp"
            android:textColor="@color/white"
            android:text="停止剪贴板服务" />

    </LinearLayout>



    <Button
        android:id="@+id/bind"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		 android:visibility="gone"
        android:text="bindService" />

    <Button
        android:id="@+id/unbind"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="unbindService" />

    <EditText
        android:id="@+id/demotext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:editable="true"
        android:text="demo_text"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:visibility="gone"
        android:text="tishi"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/clip_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_light"
        android:visibility="gone"
        android:textSize="18sp" />


</LinearLayout>
